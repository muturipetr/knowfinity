{% extends 'base.html.twig' %}

{% block title %}Contact Me{% endblock %}

{% block content %}
<section class="contact">
    <div class="container">
        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <div class="row">
            <!-- Contact Form -->
            <div class="col-md-6">
                <div class="card shadow-lg p-4">
                    <h3 class="text-center mb-4"><i class="fas fa-envelope"></i> Contact Me</h3>
                    <div class="contact-form container mx-auto mt-6 p-4 border rounded shadow-sm bg-light">
                        {{ form_start(contact_form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                            <!-- Name Field -->
                            <div class="mb-3">
                                {{ form_label(contact_form.name, 'Your Name', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    {{ form_widget(contact_form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter your name'}}) }}
                                </div>
                            </div>

                            <!-- Email Field -->
                            <div class="mb-3">
                                {{ form_label(contact_form.email, 'Your Email', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    {{ form_widget(contact_form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                                </div>
                            </div>

                            <!-- Message Field -->
                            <div class="mb-3">
                                {{ form_label(contact_form.message, 'Message', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-comment-dots"></i></span>
                                    {{ form_widget(contact_form.message, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Write your message...'}}) }}
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                {{ form_widget(contact_form.submit, {'attr': {'class': 'btn btn-success w-100'}}) }}
                            </div>

                        {{ form_end(contact_form) }}
                    </div>
                </div>
            </div>

            <!-- Social Media Links and Call to Action -->
            <div class="col-md-6">
                <!-- Social Media Links -->
                <div class="social-links mt-6">
                    <h2 class="text-2xl font-semibold dark:text-white">Connect With Me</h2>
                    <a href="mailto:pinchezman5@gmail.com" target="_blank" class="btn btn-outline-dark">
                        <i class="fas fa-envelope text-blue-500"></i>
                    </a>
                    <a href="tel:+254741039310" target="_blank" class="btn btn-outline-dark">
                        <i class="fas fa-phone text-green-500"></i> 
                    </a>
                    <a href="https://www.facebook.com/profile.php?id=61567118043043" target="_blank" class="btn btn-outline-dark" style="color: #fff;">
                        <i class="fab fa-facebook"></i> 
                    </a>
                    <a href="https://wa.me/254741039310?text=Hello!%20I'm%20interested%20in%20working%20with%20you." target="_blank" class="btn btn-success">
                        <i class="fab fa-whatsapp"></i> 
                    </a>
                </div>

                <!-- Floating WhatsApp Button -->
                <a href="https://wa.me/254741039310?text=Hello!%20I'm%20interested%20in%20your%20services." 
                class="whatsapp-float" target="_blank">
                    <i class="fab fa-whatsapp"></i>
                </a>

                <!-- Call to Action -->
                <div class="cta mt-10">
                    <h2 class="text-3xl font-bold dark:text-white">Ready to Work Together?</h2>
                    <p class="text-gray-600 dark:text-gray-300 mt-2">
                        I'm available for **freelance work, consulting, and collaborations**. Letâ€™s build something amazing!
                    </p>
                    <a href="mailto:pinchezman5@gmail.com" class="btn btn-primary mt-4">Hire Me</a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .contact h1, .contact h2 {
            color: #333;
        }
        .contact .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .contact .btn-outline-dark {
            color: #333;
            border-color: #333;
        }
        .contact .btn-outline-dark:hover {
            color: #fff;
        }
        .contact .btn-primary i, .contact .btn-outline-dark i {
            margin-right: 5px;
        }
    </style>
{% endblock %}
